---
import type { stop_propagation } from "svelte/internal";

export interface Props {
  title: string;
  description: string;
  og: string;
}

const { title, description, og } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <script defer data-domain="jontes.page" src="https://stats.jontes.page/js/script.js"></script>
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Jonte's Page</title>
    <meta name="description" content={description} />
    <!-- Webp Favicon -->
    <link rel="icon" type="image/webp" href="/images/avatar.webp" />
    <!-- OG image -->
    <meta property="og:image" content={"/images/ogp/" + og + ".png"} />
  </head>
  <body class="bg-zinc-900 flex flex-col h-screen">
    <a
      id="sticky-banner"
      tabindex="-1"
      href="/live/?utm_source=homepage&utm_medium=website&utm_campaign=banner"
      class="z-50 flex justify-between w-full p-4 border-b bg-neutral-900 hover:bg-neutral-800 transition-all border-gray-600"
    >
      <div class="flex items-center mx-auto">
        <p class="flex items-center text-sm font-normal text-gray-400">
          <span id="bannertext"
            >ğŸ¦ğŸ¥ Live Birdbox Adventure! Watch Nature Unfold in Real-Time! ğŸŒ³ğŸŒ¼</span
          >
        </p>
      </div>
    </a>
    <nav class="border-stone-200 px-2 sm:px-4 py-2.5 rounded bg-zinc-800">
      <div
        class="container flex flex-wrap items-center justify-between mx-auto"
      >
        <span
          class="self-center text-xl font-semibold whitespace-nowrap text-white mr-4"
          >Jonte's Page</span
        >
        <div class="w-auto" id="navbar-default">
          <ul
            class="flex p-4 rounded-lg flex-row space-x-8 mt-0 text-sm font-medium border-0 bg-stone-900 border-stone-700"
          >
            <li>
              <a
                href="/"
                class="block px-2 text-violet-400 rounded md:p-0"
                aria-current="page">Home</a
              >
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="flex-1">
      <slot />
    </div>
    <script>
    try {
    const res = await fetch('https://birdbox.jontes.page:4443/health')
    if (res.status !== 200) {
       document.getElementById("bannertext").innerText = "Birdbox stream offline, probably online 10AM CET."
       sessionStorage.setItem("stream-online", "false")
    }
    else {
      sessionStorage.setItem("stream-online", "true")
    }
    }
    catch {
           document.getElementById("bannertext").innerText = "Birdbox stream offline, probably online 10AM CET."
       sessionStorage.setItem("stream-online", "false")
       }

 </script>
  </body>
</html>
